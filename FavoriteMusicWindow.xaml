<Window x:Class="MusicPlayer.FavoriteMusicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Favorite Songs" Height="400" Width="450">
    <Grid>
        <ListBox Name="FavoriteMusicListBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" Height="200" SelectionChanged="FavoriteMusicListBox_SelectionChanged"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
            <Button Content="Play" Width="75" Margin="5" Click="PlayButton_Click"/>
            <Button Content="Pause" Width="75" Margin="5" Click="PauseButton_Click"/>
            <Button Content="Stop" Width="75" Margin="5" Click="StopButton_Click"/>
            
        </StackPanel>

        <!-- Кнопка видалення з улюблених -->
        <Button Content="Remove from Favorites" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="RemoveFromFavoritesButton_Click"/>

        <Button Content="Back to Menu" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="BackToMenuButton_Click"/>
    </Grid>
</Window>
